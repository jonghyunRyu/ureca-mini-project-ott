<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ureca.web.model.dao.ContentDao">

    <!-- 콘텐츠 전체 조회 -->
    <select id="getContents" resultType="Content">
        SELECT 
            id, title, type, genre_id AS genreId,
            production_year AS productionYear,
            cast, description, rating, img
        FROM contents
    </select>

</mapper>
